<%
	backgrounds = {
		"mlk" => [
			"mlk-small.jpg",
			"mlk-medium.jpg",
			"mlk-large.jpg"
		],
		"michaelcollins" => [
			"michaelcollins-small.jpg",
			"michaelcollins-medium.jpg",
			"michaelcollins-large.jpg"
		],
		"capitol" => [
			"capitol-small.jpg",
			"capitol-medium.jpg",
			"capitol-large.jpg"
		],
		"rally-1" => [
			"rally-1-small.jpg",
			"rally-1-medium.jpg",
			"rally-1-large.jpg"
		],
		"rally-2" => [
			"rally-2-small.jpg",
			"rally-2-medium.jpg",
			"rally-2-large.jpg"
		],
		"rally-3" => [
			"rally-3-small.jpg",
			"rally-3-medium.jpg",
			"rally-3-large.jpg"
		]
	}

	# If the image variable isn't defined in the view OR if the image variable isn't a key in our list of backgrounds
	if defined?(image).nil? || !backgrounds.has_key?(image)
		image = backgrounds[backgrounds.keys.sample]
	# If the image variable is specified and matches a key in our list of backgrounds, grab the location
	else
		image = backgrounds[image]
	end
%>

<div class="full-background<%= " " + classes if !defined?(classes).nil? %>" data-stellar-background-ratio="0.5" data-interchange="[/assets/backgrounds/<%= image[0] %>, (small)], [/assets/backgrounds/<%= image[1] %>, (medium)], [/assets/backgrounds/<%= image[2] %>, (large)]">
	<div class="row">
		<div class="large-12 columns">
			<%= yield %>
		</div>
	</div>
</div>
